<div class="jumbotron">
    <h1>Repayment Summary</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend>Loan Repayment Summary</legend>

                <div class="form-group">
                    <label class="col-lg-2 control-label">Total Loan Repayment:</label>
                    <label class="col-md-2 label-info">@ViewBag.TotalRepaymentAmount</label>
                    <label class="col-lg-3 control-label">Total Interest charged:</label>
                    <label class="col-md-3 label-info">@ViewBag.TotalInterest</label>
                </div>
            </fieldset>
        </form>
    </div>
</div>
